{% extends "AppBundle::indexLayout.html.twig" %}
{% block body %}

<br>
<br>

<form class="form-inline" method="post" action="{{ path('reportes') }}">


  <div class="form-group">
    <label for="exampleInputName2" >DNI</label>
    <input type="number" autocomplete="off" class="form-control" id="dni"  placeholder="Ingrese DNI">
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail2" style="margin-left: 45px;">Patente</label>
    <input type="text" autocomplete="off" class="form-control" id="patente" placeholder="Ingrese Patente">
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail2" style="margin-left: 45px;" >Desde</label>
    <input type="text" autocomplete="off"class="form-control"  id="desde" placeholder="Ingrese Fecha">
  </div>
  
   <div class="form-group">
    <label for="exampleInputEmail2" style="margin-left: 45px;" >Hasta</label>
    <input type="text" autocomplete="off"class="form-control"  id="hasta" placeholder="Ingrese Fecha">
  </div>
  
  <br>
  <br>
  
  <div class="form-group">
    <label for="exampleInputName2" style="margin-left: 45px;" >Nombre</label>
    <input type="text" autocomplete="off" class="form-control" id="nombre"  placeholder="Ingrese Nombre">
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail2" style="margin-left: 45px;" >Apellido</label>
    <input type="text" autocomplete="off" class="form-control" id="apellido" placeholder="Ingrese Apellido">
  </div>
  
   {% if rol_id == 1 %}
  <div class="form-group">
    <label for="exampleInputEmail2" style="margin-left: 45px;" >Lote</label>
    <input type="text" autocomplete="off"class="form-control"  id="lote" placeholder="Ingrese Lote">
  </div>
   {% endif %}
  
   <label for="exampleInputEmail2" style="margin-left: 45px;" >Tipo</label>
   <select class="form-control" id="tipo" style="width: 15%;" id="select">
  		 	<option id="1">Ingresos</option>
          <option id="2">Egresos</option>
          <option id="3">Ingresos y Egresos</option>
          
        </select>
  
  <button type="submit" id="submit" class="btn btn-primary">Buscar</button>
</form>
<br>
<br>
<table id="table" style="text-align: center;" class="table table-striped table-hover ">
  <thead>
    <tr>
    	<th style="text-align: center;">Id</th>
    	<th style="text-align: center;">Fecha</th>
      <th style="text-align: center;">Tipo</th>
      <th style="text-align: center;">Tipo Persona</th>
      <th style="text-align: center;">Apellido</th>
      <th style="text-align: center;" >Nombre</th>
      <th style="text-align: center;" >DNI</th>
      <th style="text-align: center;" >Patente</th>
      <th id="sort_lote" style="text-align: center;">Lote</th>
      
    </tr>
  </thead>
</table>
<br>
  
<div id="button_container">
</div>
  

{% block body_js_jquery %}
	{{ parent() }}
	{% javascripts output='js/*.js' 
		'@AppBundle/Resources/public/js/reportes/reportes.js'
	%}
	<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

<script type="text/javascript">

$(document).ready(function() {

		var rutas = new Rutas();

		rutas.rutaReportesSource = "{{ path('reportesSource') }}"
		rutas.rutaIndex = "{{ path('index') }}"
		rutas.rutaExportar = "{{ path('exportar') }}"

		rutas.init();

});
</script>


{% endblock %}


