{% extends "AppBundle::indexLayout.html.twig" %}
{% block body %}
{% block body_js_jquery %}
	{{ parent() }}
	{% javascripts output='js/*.js' 
		'@AppBundle/Resources/public/js/propietarios/propietarios.js' %}
	<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}
<br>
<br>
<form class="form-inline" method="post" action="{{ path('propietarios') }}">

  <div class="form-group">
    <label style="margin-right: 10px;" for="exampleInputName2">DNI</label>
    <input type="number" autocomplete="off" class="form-control" id="dni"  placeholder="Ingrese DNI">
  </div>
  
  <div class="form-group">
    <label style="margin-left: 15px; margin-right: 10px;" for="exampleInputEmail2">Nombre</label>
    <input type="text" autocomplete="off"class="form-control" id="nombre" placeholder="Ingrese Nombre">
  </div>
  
  <div class="form-group">
    <label style="margin-left: 15px; margin-right: 10px;" for="exampleInputEmail2">Apellido</label>
    <input type="text" autocomplete="off" class="form-control" id="apellido" placeholder="Ingrese Apellido">
  </div>
  
  <div class="form-group">
    <label style="margin-left: 15px; margin-right: 10px;">Lote</label>
    <input type="text" autocomplete="off" class="form-control" id="lote" placeholder="Ingrese Lote">
  </div>
  
  <button type="submit" id="submit" style="margin-left: 20px;" class="btn btn-primary">Buscar</button>
</form>

<br>

<table id="table" style="text-align: center;" class="table table-striped table-hover ">
  <thead>
    <tr>
    	
    <th style="text-align: center;">Id</th>
      <th style="text-align: center;">Apellido</th>
      <th style="text-align: center;" >Nombre</th>
      <th style="text-align: center;" >DNI</th>
      <th style="text-align: center;" >Lote</th>
      <th style="text-align: center;" >Telefono</th>
      <th style="text-align: center;" >Mail</th>
      <th style="text-align: center;">Editar/Eliminar</th>
    </tr>
  </thead>
</table>
<br>
  
<div id="button_container">
</div>

<form id="my_form" method="post" action="{{ path('administrarPropietario') }}">
<input id="id_editar" name="id_editar" type="hidden"></input>
</form>


<script type="text/javascript">

$(document).ready(function() {

		var rutas = new Rutas();
		
		rutas.rutaSourcePropietarios = "{{ path('tableSourcePropietarios') }}"

		rutas.rutaEliminarPropietario = "{{ path('eliminarPropietario') }}"

		rutas.rutaAdministrarPropietario = "{{ path('administrarPropietario') }}"	

		rutas.rutaIndex = "{{ path('index') }}"	
		
	rutas.init();
		

});
</script>


{% endblock %}
