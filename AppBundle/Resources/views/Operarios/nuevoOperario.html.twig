{% extends "AppBundle::indexLayout.html.twig" %}

{% block body %}

<br>
<br>

<div class="well bs-component" style="width: 750px;border-radius: 12px;left: 0;right: 0;top:0;margin: auto;">
<form class="form-horizontal">
  <fieldset>
    <legend>
     {% if operario.dni is empty %}
    Nuevo Operario
    {% else %}
    Editar Operario
     {% endif %}
    
    </legend>
    	<div class="form-group ">
   	 		<div class="row">
  				<div class="col-xs-4" style="text-align: right;">
  					<label style="text-align: right; margin-bottom: 0;padding-top: 9px;">(*) Apellido</label>
  				</div>
 					<div class="col-xs-4 .col-md-offset-4">
  				<input type="text" size="45" class="form-control" value="{{ operario.apellido }}" autocomplete="off" id="apellido" placeholder="Apellido">
   					</div>
				</div>
			</div>
			<br>
  		<div class="form-group ">
   	 		<div class="row">
  				<div class="col-xs-4" style="text-align: right;">
  					<label style="text-align: right; margin-bottom: 0;padding-top: 9px;">(*) Nombre</label>
  				</div>
 			<div class="col-xs-4 .col-xs-offset-4">
  				<input type="text" size="45" class="form-control"  value="{{ operario.nombre }}"autocomplete="off" id="nombre" placeholder="Nombre">
   			</div>
		</div>
		</div>
        <br>
           
    	<div class="form-group ">
   	 		<div class="row">
  				<div class="col-xs-4" style="text-align: right;">
  					<label style="text-align: right; margin-bottom: 0;padding-top: 9px;">(*) DNI</label>
  				</div>
 			<div class="col-xs-4 .col-xs-offset-4">
  				<input type="number" size="10" class="form-control" value="{{ operario.dni }}"  autocomplete="off" id="dni"  placeholder="DNI">
   			</div>
		</div>
		</div>
		
		<br>

	<div class="form-group ">
   	 		<div class="row">
  				<div class="col-xs-4" style="text-align: right;">
  					<label style="text-align: right; margin-bottom: 0;padding-top: 9px;">(*) Fecha de Nacimiento</label>
  				</div>
 			<div class="col-xs-4 .col-xs-offset-4">
  				<input type="text" class="form-control" value="{{ operario.fechaNacimiento|date('d/m/Y') }}" id="fechaNacimiento" placeholder="Fecha de Nacimiento">
   			</div>
		</div>
		</div>
	<br>


<div class="form-group ">
   	 		<div class="row">
  				<div class="col-xs-4" style="text-align: right;">
  					<label style="text-align: right; margin-bottom: 0;padding-top: 9px;"> (*) Contrase&ntilde;a</label>
  				</div>
 			<div class="col-xs-4 .col-xs-offset-4">
  				<input type="password" class="form-control" value="{{ operario.password }}"  autocomplete="off" id="password" required="required" placeholder="Contrase&ntilde;a">
   			</div>
		</div>
		</div>
		<br>

    <div class="form-group">
       <button type="button" id="cancelar" class="btn btn-primary btn-default">Cancelar</button>  &nbsp; &nbsp;
       <button type="button" id="submit" class="btn btn-primary btn-default">Aceptar</button>
     </div>
    </div>
</div>
</fieldset>
</form>
</div>


{% block body_js_jquery %}
	{{ parent() }}
	{% javascripts output='js/*.js' 
		'@AppBundle/Resources/public/js/operarios/nuevoOperario.js'
	%}
	<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

<script type="text/javascript">

$(document).ready(function() {

	$('.dropdown-toggle').dropdown();
	
	var rutas = new Rutas();
	
	rutas.rutaValidarOperario = "{{ path('validarOperario') }}"

	rutas.rutaOperarios = "{{ path('operarios') }}"

	rutas.id_usuario_editado = {{ operario.id }}	
		
	rutas.init();

	
	

});



</script>

{% endblock %}
